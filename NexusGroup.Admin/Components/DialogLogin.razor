@using MudBlazor
@inject ISnackbar Snackbar
<MudDialog>
    <DialogContent>
        <div style="display: flex; flex-direction: column; align-items: center;">
            <MudIcon Icon="@Icon" Color="@IconColor" Size="Size.Large" />
            <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-2">@Message</MudText>
        </div>
    </DialogContent>
    <DialogActions>
        @if (Success)
        {
            <MudButton Variant="Variant.Filled" Disabled="!Success" OnClick="MoveTo">Siguiente</MudButton>
        }
        else
        {
            <MudButton Variant="Variant.Filled" OnClick="CloseDialog">Cerrar</MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Message { get; set; }
    [Parameter] public Severity Severity { get; set; }
    [Parameter] public bool Success { get; set; }

    private string Icon => Severity == Severity.Success ? Icons.Material.Outlined.CheckCircleOutline : Icons.Material.Outlined.ErrorOutline;
    private Color IconColor => Severity == Severity.Success ? Color.Primary : Color.Error;
    private void CloseDialog() => MudDialog.Close();
    private void MoveTo()
    {
        Snackbar.Add("Inicio de Sesion Correctamente", Severity.Normal);
        MudDialog.Close(DialogResult.Ok(true));
    }
}
